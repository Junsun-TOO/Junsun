border-1px($color) 
    position: relative
    // 添加伪类
    &:after
        display: block
        position: absolute
        left: 0
        bottom: 0
        width: 100%
        border-top: 1px solid $color
        content: ' '

border-none()
  &:after
    display: none
    
bg-image($url)//默认2x图，dpr为3则使用3x图
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
    background-image: url($url + "@3x.png")
